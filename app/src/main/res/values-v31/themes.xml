<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AplikasiGitHubUser" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary Color -->
        <item name="colorPrimary">@color/material_dynamic_primary40</item>
        <item name="colorOnPrimary">@color/material_dynamic_primary99</item>
        <item name="colorPrimaryContainer">@color/material_dynamic_primary90</item>
        <item name="colorOnPrimaryContainer">@color/material_dynamic_primary10</item>

        <!-- Secondary Color -->
        <item name="colorSecondary">@color/material_dynamic_secondary40</item>
        <item name="colorOnSecondary">@color/material_dynamic_secondary99</item>
        <item name="colorSecondaryContainer">@color/material_dynamic_secondary90</item>
        <item name="colorOnSecondaryContainer">@color/material_dynamic_secondary10</item>

        <!-- Tertiary Color -->
        <item name="colorTertiary">@color/material_dynamic_tertiary40</item>
        <item name="colorOnTertiary">@color/material_dynamic_tertiary99</item>
        <item name="colorTertiaryContainer">@color/material_dynamic_tertiary90</item>
        <item name="colorOnTertiaryContainer">@color/material_dynamic_tertiary10</item>

        <item name="android:colorBackground">@color/material_dynamic_neutral_variant99</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/material_dynamic_neutral_variant90</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="toolbarStyle">
        <item name="android:background">@color/material_dynamic_neutral_variant90</item>
    </style>

    <style name="searchBgTint">
        <item name="android:backgroundTint">@color/material_dynamic_neutral95</item>
    </style>

    <style name="collapsingToolbarLayout">
        <item name="android:background">@color/material_dynamic_primary99</item>
    </style>

    <style name="searchViewBackground">
        <item name="backgroundTint">@color/material_dynamic_primary99</item>
    </style>

</resources>